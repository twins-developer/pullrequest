- title t('.title')
- description t('.description')

%h1.text-center= t '.title'
.row
  .col-xs-12.col-md-offset-2.col-md-8
    .panel.panel-default
      .panel-body
        = render 'error_messages', resource: resource if resource.errors.any?
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f|
          .form-group
            .col-xs-12

          .form-group
            = f.label :email, class: 'col-xs-12 col-md-3 control-label'
            .col-xs-12.col-md-9
              = f.email_field :email, class: 'form-control'

          .form-group
            = f.label :password , class: 'col-xs-12 col-md-3 control-label'
            .col-xs-12.col-md-9
              = f.password_field :password, class: 'form-control'

          .form-group
            = f.label :password_confirmation, class: 'col-xs-12 col-md-3 control-label'
            .col-xs-12.col-md-9
              = f.password_field :password_confirmation, class: 'form-control'

          .form-group
            .col-xs-12.col-md-4.col-md-offset-3
              = f.submit t('helpers.links.sign_up'), class: 'btn btn-primary btn-block'
              %br

          .form-group
            %hr

          .form-group
            .col-xs-12
              %h5= t '.sub_titles.already_have_account'

          .form-group
            .col-xs-12
              #{link_to t('helpers.links.here'), new_session_path(resource_name)}からログインできます
