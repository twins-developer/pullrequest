.page-header
  %h1= t('.title')

.container
  .row
    .col-md-3
      .panel.panel-default
        %ul.nav.nav-pills.nav-stacked
          %li= link_to t('companies.engineers.index.title'), companies_engineers_path
    .col-md-9
      .table-responsive
        %table.table.table-striped.table-bordered.table-hover
          %thead
            %tr
              %th Company
              %th 開始日
              %th 終了日
              %th Status
              %th title
              %th 詳細
              %th

          %tbody
            - @projects.each do |project|
              %tr
                %td= project.company.name
                %td= project.start_on
                %td= project.end_on
                %td= project.status
                %td= project.title
                %td= project.note
                - if company_signed_in?
                  %td= link_to 'Show', companies_project_path(project.id)
                - if engineer_signed_in?
                  %td= link_to 'Show', [:engineers, project]
