.container
  .row
    .col-md-3
      .panel.panel-default
        %ul.nav.nav-pills.nav-stacked
          %li= link_to 'レビューなど', companies_engineers_path
    .col-md-9
      - @engineers.each do |engineer|
        .panel.panel-default
          .panel-heading
            = engineer.name
          .panel-body
            .col-md-3
              = link_to image_tag(engineer.image.url, class: 'img-responsive img-circle'), [:companies, engineer]
            .col-md-9
              - if engineer.message
                %li= engineer.message.truncate(30)
              %li= engineer.created_at
