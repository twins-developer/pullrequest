.page-header
  %h1 Staffs::Reviews#new

.col-md-12
  = form_for [:staffs, @review], html: { class: 'form-horizontal', role: 'form' } do |f|

    - if @review.errors.any?
      .alert.alert-danger.alert-dismissable{ role: 'alert' }
        %button.close{ type: 'button', data: { dismiss: 'alert' } }
          %span{ aria: { hidden: 'true' } } &times;
          %span.sr-only Close
        %h4= "#{pluralize(@review.errors.count, t('.errors'))}"

        %ul
          - @review.errors.full_messages.each do |msg|
            %li= msg

    .form-group
      %label.col-md-3.control-label.control-label-required
        = t('activerecord.attributes.review.title')
        &nbsp;
        %span.label.label-info= t('helpers.labels.required')
      .col-md-9
        = f.text_field :title, class: 'form-control', placeholder: t('.title_example')

    .form-group
      %label.col-md-3.control-label.control-label-required
        = t('activerecord.attributes.review.started_on')
        &nbsp;
        %span.label.label-info= t('helpers.labels.required')
      .col-md-9
        = f.text_field :started_on, id: 'datepicker_of_start', data: { date_format: 'YYYY/MM/DD' },
          class: 'form-control'

    .form-group
      %label.col-md-3.control-label.control-label-required
        = t('activerecord.attributes.review.ended_on')
        &nbsp;
        %span.label.label-info= t('helpers.labels.required')
      .col-md-9
        = f.text_field :ended_on, id: 'datepicker_of_end', data: { date_format: 'YYYY/MM/DD' },
          class: 'form-control'

    .form-group
      %label.col-md-3.control-label.control-label-required
        = t('activerecord.attributes.review.note')
        &nbsp;
        %span.label.label-info= t('helpers.labels.required')
      .col-md-9
        = f.text_area :note, size: '20x20', class: 'form-control', placeholder: t('.note_example')

    .form-group
      %label.col-md-3.control-label.control-label-required
        = t('activerecord.attributes.review.note')
        &nbsp;
        %span.label.label-info= t('helpers.labels.required')
      .col-md-9
        = f.text_area :code, size: '20x20', class: 'form-control', placeholder: t('.note_example')

    .form-group
      .col-md-2.pull-right
        = f.submit class: 'btn btn-primary btn-block'
